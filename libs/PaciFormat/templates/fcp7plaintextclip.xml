<generatoritem id="文本">
    <name>文本</name>
    <duration>{TEXTDURATION}</duration>
    <rate>
        <ntsc>{NTSC}</ntsc>
        <timebase>{TIMEBASE}</timebase>
    </rate>
    <in>1000</in>
    <out>{OUTPOINT}</out>
    <start>{STARTPOINT}</start>
    <end>{ENDPOINT}</end>
    <enabled>{ENABLED}</enabled>
    <anamorphic>FALSE</anamorphic>
    <alphatype>black</alphatype>
    <effect>
        <name>文本</name>
        <effectid>Text</effectid>
        <effectcategory>文字</effectcategory>
        <effecttype>generator</effecttype>
        <mediatype>video</mediatype>
        <parameter>
            <parameterid>str</parameterid>
            <name>文本</name>
            <value>{TEXTSTRING}</value>
        </parameter>
        <parameter>
            <parameterid>fontname</parameterid>
            <name>字体</name>
            <value>{FONTNAME}</value>
        </parameter>
        <parameter>
            <parameterid>fontsize</parameterid>
            <name>大小</name>
            <valuemin>0</valuemin>
            <valuemax>1000</valuemax>
            <value>{FONTSIZE}</value>
        </parameter>
        <parameter>
            <parameterid>fontstyle</parameterid>
            <name>样式</name>
            <valuemin>1</valuemin>
            <valuemax>4</valuemax>
            <valuelist>
                <valueentry>
                    <name>普通</name>
                    <value>1</value>
                </valueentry>
                <valueentry>
                    <name>粗体</name>
                    <value>2</value>
                </valueentry>
                <valueentry>
                    <name>斜体</name>
                    <value>3</value>
                </valueentry>
                <valueentry>
                    <name>粗体/斜体</name>
                    <value>4</value>
                </valueentry>
            </valuelist>
            <value>{FONTSTYLE}</value>
        </parameter>
        <parameter>
            <parameterid>fontalign</parameterid>
            <name>对齐</name>
            <valuemin>1</valuemin>
            <valuemax>3</valuemax>
            <valuelist>
                <valueentry>
                    <name>左</name>
                    <value>1</value>
                </valueentry>
                <valueentry>
                    <name>中</name>
                    <value>2</value>
                </valueentry>
                <valueentry>
                    <name>右</name>
                    <value>3</value>
                </valueentry>
            </valuelist>
            <value>{ALIGN}</value>
        </parameter>
        <parameter>
            <parameterid>fontcolor</parameterid>
            <name>字体颜色</name>
            <value>
                <alpha>{COLORALPHA}</alpha>
                <red>{COLORRED}</red>
                <green>{COLORGREEN}</green>
                <blue>{COLORBLUE}</blue>
            </value>
        </parameter>
        <parameter>
            <parameterid>origin</parameterid>
            <name>原点</name>
            <value>
                <horiz>0</horiz>
                <vert>0</vert>
            </value>
        </parameter>
        <parameter>
            <parameterid>fonttrack</parameterid>
            <name>字距</name>
            <valuemin>-200</valuemin>
            <valuemax>200</valuemax>
            <value>{TRACKSPACE}</value>
        </parameter>
        <parameter>
            <parameterid>leading</parameterid>
            <name>行距</name>
            <valuemin>-100</valuemin>
            <valuemax>100</valuemax>
            <value>{ROWSPACE}</value>
        </parameter>
        <parameter>
            <parameterid>aspect</parameterid>
            <name>宽高比</name>
            <valuemin>0.1</valuemin>
            <valuemax>5</valuemax>
            <value>{ASPECT}</value>
        </parameter>
        <parameter>
            <parameterid>autokern</parameterid>
            <name>自动微调字距</name>
            <value>TRUE</value>
        </parameter>
        <parameter>
            <parameterid>subpixel</parameterid>
            <name>使用分像素</name>
            <value>TRUE</value>
        </parameter>
    </effect>
    <sourcetrack>
        <mediatype>video</mediatype>
    </sourcetrack>
</generatoritem>
